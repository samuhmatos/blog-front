{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@types": ["./src/@types"],
      "@components": ["./src/components"],
      "@components/Skeleton": ["./src/components/Skeleton"],
      "@domain": ["./src/domain"],
      "@api": ["./src/api"],
      "@utils": ["./src/utils"],
      "@context": ["./src/context"],
      "@config": ["./config.ts"],
      "@schema": ["./src/schema"],
      "@hooks": ["./src/hooks"],
      "@middlewares": ["./src/middlewares"],
      "@infra": ["./src/infra"],
      "@brand": ["./src/brand"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
